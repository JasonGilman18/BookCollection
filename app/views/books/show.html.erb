<div class="center">
    <h1>Book Details</h1>

    <ul>
        <p><b>Title:</b> <%= @book.title %></p>
        <br>
        <p><b>Author:</b> <%= @book.author %></p>
        <br>
        <p><b>Genre:</b> <%= @book.genre %></p>
        <br>
        <p><b>Price:</b> $<%= @book.price %></p>
        <br>
        <p><b>Published Date (Year-Month-Day):</b> <%= @book.published_date.to_s.split(" ")[0] %></p>
    </ul>

    <div class="horozontal">
        <%= link_to "Edit", edit_book_path(@book), class: "showLink" %>
        <%= link_to "Remove", remove_book_path(@book), class: "showLink" %>
        <%= link_to "Home", root_path, class: "showLink" %>
    </div>
</div>