<%= stylesheet_link_tag "global" %>

<div class="center">
    <h1>Book Collection</h1>

    <% flash.each do |type, msg| %>
        <div class="notice"><%= msg %></div>
    <% end %>

    <div class="indexTable">
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Action</th>
            </tr>
            <% @books.each do |book| %>
                <tr>
                    <td><%= link_to book.title, book %></td>
                    <td><%= book.author %></td>
                    <td><%= link_to "Edit", edit_book_path(book) %> - <%= link_to "Remove", remove_book_path(book) %></td>
                </tr>
            <% end %>
            <tr>
                <td><%= link_to "+", new_book_path %></td>
            </tr>
        <table>
    </div>
</div>
